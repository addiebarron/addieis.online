const bugOptions = ["ğŸ", "ğŸ¦‹", "ğŸª²"];
const bugRepeat = 6; // number of times the bug options will be repeated
const bugs = [].concat(...Array(bugRepeat).fill(bugOptions));
---

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const bugs = document.querySelectorAll<HTMLElement>(".bug");
    bugs.forEach(bug => {
      bug.style.display = "block"; // Only show if JS is enabled
      bug.style.top = Math.random() * 90 + 5 + "vh";
      bug.style.left = Math.random() * 90 + 5 + "vw";
      bug.style.transform = `rotate(${Math.random() * 240 - 120}deg)`;
    });
  });
</script>

{bugs.map(bug => <div class="bug">{bug}</div>)}

<style lang="scss">
  .bug {
    display: none; /* Enabled by JS */
    position: absolute;
    font-size: 24px;
  }
</style>
